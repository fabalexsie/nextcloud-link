{
  "include": ["source/**/*.ts", "tests/**/*.ts", "node_modules/@types"],
  "atom":    { "rewriteTsconfig": false },

  "compilerOptions": {
    "baseUrl":                "./",
    "outDir":                 "./compiled/",
    "declaration":            true,
    "experimentalDecorators": true,
    "sourceMap":              true,
    "strict":                 false,
    "target":                 "es2018",
    "esModuleInterop":        true,
    "moduleResolution":       "node",
    "types":                  ["node"],
    "module":                 "commonjs",
    "lib":                    ["es2018"]
  }
}
